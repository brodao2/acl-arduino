{
  "version": "0.2.0",
  // List of configurations. Add new configurations or edit existing ones.
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Extension",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}",
        "--inspect",
        "--inspect-brk"
      ],
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/client/out/**/*.js"],
      "preLaunchTask": "npm: compile"
      //"autoAttachChildProcesses": true
      //"trace": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach6010",
      "address": "localhost",
      "protocol": "inspector",
      "port": 6010,
      "outputCapture": "console",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/server/out/**/*.js"],
      "internalConsoleOptions": "openOnSessionStart"
      //"continueOnAttach": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach6011",
      "address": "localhost",
      "protocol": "inspector",
      "port": 6011,
      "outputCapture": "console",
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/server/out/**/*.js"],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ],
  "compounds": [
    {
      "name": "Extension and Server",
      "configurations": ["Extension", "Attach6010", "Attach6011"],
      "preLaunchTask": "npm: compile"
    }
  ]
}
